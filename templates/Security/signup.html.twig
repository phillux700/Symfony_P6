{%  extends 'base.html.twig' %}
{% form_theme formSignup 'bootstrap_4_layout.html.twig' %}
{% block title %}S'inscrire{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="../../css/custom.css">
    <style>
        .form-error-icon {
            display: none;
        }
        button:hover {
            transform : scale(1.03);
            box-shadow : 6px 6px 25px 18px rgba(0,0,0, 0.2);
        }
        button:active {
            transform : scale(0.98);
            box-shadow : 6px 6px 18px 2px rgba(0,0,0, 0.23);
        }
    </style>
{% endblock %}
{% block body %}
    <h1 class="text-center" style="margin-top: 150px">Inscription</h1>
    <div class="container" style="padding-top: 100px;">

        <div class="row justify-content-md-center">
            <div class="col-md-6">
        {{ form_start(formSignup) }}
        {{ form_row(formSignup.username, { 'label': 'Nom d\'utilisateur', 'attr': {
            'placeholder': 'Nom d\'utilisateur' }}) }}
        {{ form_row(formSignup.email, {'label': 'Adresse email', 'attr': {'placeholder': 'email'}}) }}
        {{ form_row(formSignup.plainPassword.first, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe' }}) }}
        {{ form_row(formSignup.plainPassword.second, {'label': 'Confirmer Mot de passe', 'attr': {'placeholder': 'Confirmer Mot de passe'}}) }}
        <button type="submit" style="display: block; margin: 50px auto;" class="btn btn-success">Inscription</button>
        {{ form_end(formSignup) }}
            </div>
        </div>
    </div>
    </div>
    </div>
{%  endblock %}
