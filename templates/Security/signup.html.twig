{%  extends 'base.html.twig' %}
{% form_theme formSignup 'bootstrap_4_layout.html.twig' %}
{% block title %}S'inscrire{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="../../css/custom.css">
{% endblock %}
{% block body %}
    <div class="container formcentre">

        <div class="row justify-content-md-center">
            <div class="col-md-6">
        {{ form_start(formSignup) }}
        {{ form_row(formSignup.username, { 'label': 'Nom d\'utilisateur', 'attr': {
            'placeholder': 'Nom d\'utilisateur' }}) }}
        {{ form_row(formSignup.email, {'label': 'Adresse email', 'attr': {'placeholder': 'email'}}) }}
        {{ form_row(formSignup.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe' }}) }}
        {{ form_row(formSignup.confirm_password, {'label': 'Confirmer Mot de passe', 'attr': {'placeholder': 'Confirmer Mot de passe'}}) }}
        <button type="submit" class="btn btn-success">Inscription</button>
        {{ form_end(formSignup) }}
            </div>
        </div>
    </div>
    </div>
    </div>
{%  endblock %}
